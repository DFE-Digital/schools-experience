<div class="govuk-grid-row govuk-!-margin-top-4">
  <div class="govuk-grid-column-two-thirds" id="candidate-school-profile">
    <section id="school-placement-info">
      <%= simple_format @school.profile.placement_info %>
    </section>

    <div>
      <p>
        <b>Age range:</b> <%= @school.age_range %>
      </p>
      <p>
        <b>Description:</b> <%= @school.description %>.
      </p>
    </div>

    <div>
      <h2>
        Experience information
      </h2>

      <dl class="govuk-summary-list govuk-summary-list--no-border inline">
        <%= dlist_item 'Individual requirements:' do %>
          <%= content_or_msg @profile.individual_requirements, "No requirements specified" %>
        <% end %>

        <%= dlist_item 'Experience details:' do %>
          <%= @profile.placement_info %>
        <% end %>

        <%= dlist_item 'Experience subjects:' do %>
          <%= format_school_subjects @school %>
        <% end %>
      </dl>
    </div>

    <div>
      <h2>Location</h2>

      <%= school_location_map @school %>

      <p class="directions-link">
        <%= link_to 'Get directions', external_map_url(
              latitude: @school.coordinates.latitude,
              longitude: @school.coordinates.longitude,
              name: @school.name) %>
      </p>
    </div>

    <p>
      <%= link_to "Start request",
                  new_candidates_school_registrations_placement_preference_path(@school),
                  class:"govuk-button" %>
    </p>

    <div>
      <h2>About our school</h2>

      <dl class="govuk-summary-list govuk-summary-list--no-border inline">
        <%= dlist_item 'Age range:', id: 'school-phases' do %>
          <%= format_phases(@school) %>
        <% end %>

        <%= dlist_item 'Specialisms:' do %>
          <%= simple_format @profile.specialism_details %>
        <% end if @profile.specialism_details.present? %>
      </dl>

      <p>
        <strong>
          For more information about our school use the following links:
        </strong>
      </p>

      <ul id="school-websites">
        <%- if @school.website.present? -%>
        <li id="school-website">
          <%= link_to "#{@school.name} website", @school.website %>
        </li>
        <%- end -%>

        <li>
          <%= link_to "#{@school.name} Get Information About Schools",
                      gias_school_url(@school.urn) %>
        </li>

        <li>
          <%= link_to "Ofsted report: #{@school.name}",
                      ofsted_report_url(@school.urn) %>
        </li>

        <li>
          <%= link_to "Performance information: #{@school.name}",
                      performance_report_url(@school.urn) %>
        </li>

        <%- if @school.teacher_training_provider? && @school.teacher_training_website.present? -%>
        <li>
          <%= link_to "Teacher training: #{@school.name}",
            cleanup_school_url(@school.teacher_training_website) %>
        </li>
        <%- end -%>
      </ul>
    </div>

    <p>
      <%= link_to 'Back to Search Results', :back,
                  data: {controller: 'back-link'} %>
    </p>
  </div>

  <div class="candidate-profile-sidebar govuk-grid-column-one-third column-top-border">
    <dl class="govuk-summary-list govuk-summary-list--no-border vertical">
      <%= dlist_item 'Address', id: 'school-address' do %>
        <%= format_school_address @school, tag(:br) %>
      <% end %>

      <div id="school-availability-info" class="govuk-summary-list__row">
        <%- if @school.availability_preference_fixed? -%>
          <%= render partial: 'placement_dates', locals: { available_dates: @available_dates } %>
        <%- else -%>
          <dt class="govuk-summary-list__key">
            Placement availability
          </dt>
          <dd class="govuk-summary-list__value">
            <%= format_school_availability(@school) %>
          </dd>
        <%- end -%>
      </div>

      <%= dlist_item 'DBS check required' do %>
        <%= @profile.dbs_required %>
      <% end %>

      <%= dlist_item 'Fees' do %>
        <strong style="color:#ff0000">To be done</strong>
      <% end %>

      <%= dlist_item 'Dress code' do %>
        <%= content_or_msg format_dress_code(@profile), "No dress code supplied" %>
      <% end %>

      <%= dlist_item 'Experience start and finish times' do %>
        <%= @profile.start_time %> to <%= @profile.end_time %>

        <%- if @profile.flexible_on_times -%>
          - Flexible
        <%- end -%>
      <% end %>

      <%= dlist_item 'Parking' do %>
        <%- if @profile.parking_provided -%>
          <p>Yes - on site parking provided</p>
        <%- else -%>
          <p>Not available on site</p>
        <%- end -%>

        <%= simple_format @profile.parking_details %>
      <% end %>

      <%= dlist_item 'Accessibility details' do %>
        <%- if @profile.disabled_facilities.present? -%>
          <%= simple_format @profile.disabled_facilities %>
        <%- else -%>
          <em>No information supplied</em>
        <%- end -%>
      <% end %>

      <%= dlist_item 'Teacher training offered' do %>
        <%= simple_format @profile.teacher_training_info %>

        <p>
          <%= link_to 'More information', @profile.teacher_training_url %>
        </p>
      <% end if @profile.teacher_training_info.present? %>
    </dl>
  </div>
</div>
