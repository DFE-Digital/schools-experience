<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Unfortunately we donâ€™t have your details</h1>
    <p>Register your details with us so you can get school experience placements.</p>
    <%= form_for @address, url: candidates_registrations_address_path do |f| %>
      <%= GovukElementsErrorsHelper.error_summary @address, 'There is a problem', '' %>

      <fieldset id="address-fields" class="govuk-fieldset">

        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
          <h1 class="govuk-fieldset__heading">Address and telephone number</h1>
        </legend>

        <%= f.text_field :building, class: 'govuk-!-width-two-thirds' %>

        <% if f.object.errors[:street].any? %>
          <%= f.text_field :street, class: 'govuk-!-width-two-thirds' %>
        <% else %>
          <%= f.text_field :street, class: 'govuk-!-width-two-thirds', label_options: { class: 'govuk-visually-hidden' } %>
        <% end %>

        <%= f.text_field :town_or_city, class: 'govuk-!-width-one-half' %>
        <%= f.text_field :county, class: 'govuk-!-width-one-half' %>
        <%= f.text_field :postcode, class: 'govuk-input govuk-input--width-5' %>
      </fieldset>

      <%= f.telephone_field :phone, class: 'govuk-!-width-one-half' %>

      <%= f.submit 'Continue' %>

    <% end %>
  </div>
</div>