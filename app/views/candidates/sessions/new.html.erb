<% self.page_title = 'Sign in to school experience' %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @candidates_session, url: candidates_signin_path, html: {novalidate: true} do |f| %>
      <%= f.govuk_error_summary %>

      <h1>Get school experience sign in</h1>

      <p>
        Enter the name and email address you used to request school experience 
        and we will send you a code to sign in. 
      </p>

      <%= f.govuk_text_field :firstname, autocomplete: 'given-name' %>
      <%= f.govuk_text_field :lastname, autocomplete: 'family-name' %>
      <%= f.govuk_email_field :email, autocomplete: 'on' %>

      <%= f.govuk_submit 'Sign in' %>
    <% end %>

  </div>
</div>
