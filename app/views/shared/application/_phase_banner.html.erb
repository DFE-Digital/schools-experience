<div class="govuk-phase-banner">
  <div class="govuk-phase-banner__content">
    <strong class="govuk-tag govuk-phase-banner__content__tag ">
      beta
    </strong>
    <div class="govuk-phase-banner__text phase">
      This is a new service. <%= link_to 'Give feedback', feedback_path %>
    </div>
    <% if @current_user.present? %>
      <div class="govuk-phase-banner__text auth">
        <%= current_user_info_and_logout_link current_user %>
      </div>
    <% end %>

    <% if @current_candidate.present? %>
      <div class="govuk-phase-banner__text auth">
        <%= current_candidate_info_and_logout_link @current_candidate %>
      </div>
      <% end %>
  </div>
</div>
