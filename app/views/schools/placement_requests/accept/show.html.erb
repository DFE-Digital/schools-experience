<h1>Confirm booking details</h1>

<dl class="govuk-summary-list">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      School
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @placement_request.school_name %>
    </dd>

    <dd class="govuk-summary-list__actions">
    <a class="govuk-link" href="#">
      Change
      <span class="govuk-visually-hidden"> name</span>
    </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      School experience dates
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @placement_request.dates %>
    </dd>

    <dd class="govuk-summary-list__actions">
    <a class="govuk-link" href="#">
      Change
      <span class="govuk-visually-hidden"> name</span>
    </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      School experience details
    </dt>
    <dd class="govuk-summary-list__value">
     <%= @placement_request.details %>
    </dd>

    <dd class="govuk-summary-list__actions">
    <a class="govuk-link" href="#">
      Change
      <span class="govuk-visually-hidden"> name</span>
    </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Requested subject
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @placement_request.requested_subject %>
    </dd>

    <dd class="govuk-summary-list__actions">
    <a class="govuk-link" href="#">
      Change
      <span class="govuk-visually-hidden"> name</span>
    </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Request received
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @placement_request.received_on %>
    </dd>

    <dd class="govuk-summary-list__actions">
    <a class="govuk-link" href="#">
      Change
      <span class="govuk-visually-hidden"> name</span>
    </a>
    </dd>
  </div>

</dl>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p>Some blurb about who the candidate should contact on the day</p>

    <%= form_for @dummy_contact, url: schools_placement_request_accept_path, method: :post do |f| %>
      <%= f.text_field :contact_name, 'Contact name' %>
      <%= f.text_field :telephone_number, 'Telephone number' %>
      <%= f.text_field :email_address, 'Email addressj' %>
      <%= f.text_field :location, 'Location' %>
      <%= f.text_field :other_details, 'Other details' %>
      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>
