<%= link_to 'Back', schools_dashboard_path, class: 'govuk-back-link' %>

<div id="school-requests">
  <%- @placement_requests.each do |pr| -%>
  <div class="school-request">
    <h2 class="govuk-heading-m">Request from <%= pr.candidate.full_name %></h2>

    <dl class="placement-details govuk-summary-list">
      <div class="date-requested govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Dates requested
        </dt>
        <dd class="govuk-summary-list__value">
          <%= pr.dates_requested %>
        </dd>
      </div>

      <div class="date-received-on govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Request received
        </dt>
        <dd class="govuk-summary-list__value">
          <%= pr.received_on %>
        </dd>
      </div>

      <div class="contact-details govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Contact details
        </dt>
        <dd class="govuk-summary-list__value">

          <details class="govuk-details">
            <summary class="govuk-details__summary">
              <span class="govuk-details__summary-text">
                View contact details
              </span>
            </summary>

            <div class="govuk-details__text">
              <dl class="govuk-summary-list govuk-summary-list--no-border govuk-body govuk-!-font-size-16">
                <div class="address govuk-summary-list__row">
                  <dt class="govuk-summary-list__key">
                    Address
                  </dt>
                  <dd class="govuk-summary-list__value">
                    <%= pr.candidate.building %>,
                    <%= pr.candidate.town_or_city %>,
                    <%= pr.candidate.postcode %>
                  </dd>
                </div>

                <div class="phone-number govuk-summary-list__row">
                  <dt class="govuk-summary-list__key">
                    UK telephone number
                  </dt>
                  <dd class="govuk-summary-list__value">
                    <%= pr.candidate.phone %>
                  </dd>
                </div>

                <div class="email-address govuk-summary-list__row">
                  <dt class="govuk-summary-list__key">
                    Email address
                  </dt>
                  <dd class="govuk-summary-list__value">
                    <%= pr.candidate.email %>
                  </dd>
                </div>

              </dl>
            </div>
          </details>

        </dd>
      </div>

      <div class="teaching-stage govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Teaching stage
        </dt>
        <dd class="govuk-summary-list__value">
          <%= pr.teaching_stage %>
        </dd>
      </div>

      <div class="teaching-subject govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Teaching subject
        </dt>
        <dd class="govuk-summary-list__value">
          <%= pr.teaching_subject %>
        </dd>
      </div>

      <div class="status govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Status
        </dt>
        <dd class="govuk-summary-list__value">
          <span class="govuk-tag"><%= pr.status %></span>
        </dd>
      </div>
    </dl>

    <%= link_to "Open request", schools_placement_request_path('abc123'), class: 'govuk-button' %>

  </div>
  <%- end -%>
</div>
