<% self.page_title = "Withdrawn request #{@withdrawn_request.id}" %>

<%
  self.breadcrumbs = {
    @current_school.name => schools_dashboard_path,
    'Withdrawn requests' => schools_withdrawn_requests_path,
    "Request #{@withdrawn_request.id}" => nil
  }
%>

<div id="withdrawn-request-view" class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">
      Cancellation from <%= @withdrawn_request.candidate_name %>
    </h1>

    <section id="cancellation-details">
      <h2>Cancellation details</h2>

      <dl class="placement-details govuk-summary-list">
        <%= summary_row 'Reason', @cancellation.reason %>
      </dl>
    </section>

    <section id="personal-details">
      <h2>Personal details</h2>

      <dl class="placement-details govuk-summary-list">
        <%= summary_row 'Address', @withdrawn_request.gitis_contact.address %>
        <%= summary_row 'UK telephone number', @withdrawn_request.gitis_contact.phone %>
        <%= summary_row 'Email address', @withdrawn_request.gitis_contact.email %>
      </dl>
    </section>

    <section id="request-details">
      <h2>Request details</h2>

      <dl class="placement-details govuk-summary-list">
        <%= summary_row 'Dates requested', @withdrawn_request.dates_requested %>
        <%= summary_row 'DBS certificate', format_boolean(@withdrawn_request.has_dbs_check?) %>
        <%= summary_row 'Request received', @withdrawn_request.received_on.to_formatted_s(:govuk) %>
      </dl>
    </section>

    <section id="candidate-details">
      <h2>Candidate details</h2>

      <dl class="govuk-summary-list">
        <%= summary_row 'What they want out of school experience', @withdrawn_request.objectives %>
        <%= summary_row 'Degree stage', @withdrawn_request.degree_stage %>
        <%= summary_row 'Degree subject', @withdrawn_request.degree_subject %>
        <%= summary_row 'Teaching stage', @withdrawn_request.teaching_stage %>
        <%= summary_row 'Teaching subject', "First choice: #{@withdrawn_request.subject_first_choice}", id: 'teaching-subject-first-choice' %>
        <%= summary_row 'Teaching subject', "Second choice: #{@withdrawn_request.subject_second_choice}", id: 'teaching-subject-second-choice' %>
      </dl>
    </section>

    <%= govuk_link_to "Return to withdrawn requests", request.referer || schools_withdrawn_requests_path, secondary: true %>
  </div>
</div>