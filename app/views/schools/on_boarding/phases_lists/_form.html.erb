<%- self.page_title = 'Which school phases do you offer experience with?' %>
<% content_for :back_link do govuk_back_link(javascript: true); end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for phases_list, url: url, method: method do |f| %>
      <%= f.govuk_error_summary link_base_errors_to: :primary_1 %>

      <h1 class="govuk-heading-xl"><%= @current_school.name %></h1>

      <h2 class="govuk-heading-l">
        Which school phases do you offer experience with?
      </h2>

      <p>
        Select all that apply.
      </p>

      <%= f.govuk_check_boxes_fieldset :phases, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :primary, 1, 0, multiple: false, link_errors: true %>
        <%= f.govuk_check_box :secondary, 1, 0, multiple: false %>
        <%= f.govuk_check_box :secondary_and_college, 1, 0, multiple: false %>
        <%= f.govuk_check_box :college, 1, 0, multiple: false %>
      <% end %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
