<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-heading-l">
      Administration costs
    </div>

    <%= form_for @administration_fee, url: schools_on_boarding_administration_fee_path do |f| %>
      <%= GovukElementsErrorsHelper.error_summary @administration_fee, 'There is a problem', '' %>
      Â£<%= f.number_field :amount_pounds, width: 5, step: 0.01, min: 0, max: 9999.99 %>
      <%= f.text_area :description, rows: 7, width: 'two-thirds' %>
      <%= f.radio_button_fieldset :interval do |fieldset| %>
        <% f.object.available_intervals.each do |interval| %>
          <%= fieldset.radio_input interval %>
        <% end %>
      <% end %>
      <%= f.text_area :payment_method, rows: 7, width: 'two-thirds' %>
      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>
