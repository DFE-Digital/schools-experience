<% self.page_title = 'DBS requirements' %>

<%
  self.breadcrumbs = {
    @current_school.name => schools_dashboard_path, self.page_title => nil
  }
%>

<%= govuk_back_link javascript: true %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Enter your school experience details
    </h1>

    <p>
      These details will help candidates select a school experience.
    </p>

    <p>
      You'll be given a chance to check and change the details you enter.
    </p>

    <%= form_for dbs_requirement, url: url, method: method do |f| %>
      <%= f.radio_button_fieldset :dbs_policy_conditions do |fieldset| %>
        <%= GovukElementsErrorsHelper.error_summary f.object, 'There is a problem', '' %>

        <%= fieldset.radio_input 'required' do  %>
          <%= f.text_area_with_maxwords :dbs_policy_details, maxwords: { count: 50 } %>
        <% end %>

        <%= fieldset.radio_input 'inschool' do  %>
          <%= f.text_area_with_maxwords :dbs_policy_details_inschool, maxwords: { count: 50 } %>
        <% end %>

        <%= fieldset.radio_input 'notrequired' %>
      <% end %>

      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>
