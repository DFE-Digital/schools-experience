<%- self.page_title = 'DBS check costs' -%>

<%
  self.breadcrumbs = {
    @current_school.name => schools_dashboard_path,
    'DBS check costs' => nil
  }
%>

<%= govuk_back_link javascript: true %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      DBS check costs
    </h1>

    <%= govuk_form_for @dbs_fee, url: schools_on_boarding_dbs_fee_path do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_number_field :amount_pounds, width: 5, step: 0.01, min: 0, max: 9999.9, label: { class: 'govuk-heading-m' }, prefix_text: 'Â£' %>

      <%= f.govuk_text_area :description, rows: 4, width: 'full', label: { class: 'govuk-heading-m' } %>
      <%= f.govuk_text_area :payment_method, rows: 4, width: 'full', label: { class: 'govuk-heading-m' } %>
      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>

