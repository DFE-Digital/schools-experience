<%- self.page_title = 'Enter school experience details for candidates' -%>

<%= govuk_back_link javascript: true %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="gouvk-heading-l">
      Enter school experience details for candidates
    </h1>
    <p>
      These details will help candidates select a school experience.
    </p>

    <%= govuk_form_for candidate_experience_detail, url: url, method: method do |f| %>
      <%= f.govuk_error_summary link_base_errors_to: :business_dress_1 %>

      <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
        <h2 class="govuk-fieldset__heading">Do you have a dress code for candidates?</h2>
      </legend>

      <p>Select all that apply or leave blank if you have no dress code.</p>

      <%= f.govuk_check_boxes_fieldset :business_dress, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :business_dress, 1, 0, multiple: false %>
      <% end %>

      <%= f.govuk_check_boxes_fieldset :cover_up_tattoos, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :cover_up_tattoos, 1, 0, multiple: false %>
      <% end %>

      <%= f.govuk_check_boxes_fieldset :remove_piercings, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :remove_piercings, 1, 0, multiple: false %>
      <% end %>

      <%= f.govuk_check_boxes_fieldset :smart_casual, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :smart_casual, 1, 0, multiple: false %>
      <% end %>

      <%= f.govuk_check_boxes_fieldset :other_dress_requirements, multiple: false, legend: nil do %>
        <%= f.govuk_check_box :other_dress_requirements, 1, 0, multiple: false do %>
          <%= f.govuk_text_field :other_dress_requirements_detail %>
        <% end %>
      <% end %>

      <%= f.govuk_radio_buttons_fieldset :parking_provided do %>
        <%= f.govuk_radio_button :parking_provided, "true", link_errors: true do %>
          <%= f.govuk_text_area :parking_details, rows: 7 %>
        <% end %>
        <%= f.govuk_radio_button :parking_provided, "false" do %>
          <%= f.govuk_text_area :nearby_parking_details, rows: 7 %>
        <% end %>
      <% end %>

      <div class="govuk-form-group">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
          <h1 class="govuk-fieldset__heading">
            What are your start and finish times for candidates?
          </h1>
        </legend>
        <fieldset class="govuk-fieldset">
          <%= f.govuk_text_field :start_time, class: 'govuk-!-width-one-quarter' %>
          <%= f.govuk_text_field :end_time, class: 'govuk-!-width-one-quarter' %>
        </fieldset>
      </div>

      <%= f.govuk_radio_buttons_fieldset :times_flexible do %>
        <p>
          Can candidates start later or finish earlier depending on their
          individual needs. For example, around child care or any other
          responsibilities.
        </p>
        <%= f.govuk_radio_button :times_flexible, "true", link_errors: true do %>
          <%= f.govuk_text_area :times_flexible_details, rows: 7 %>
        <% end %>
        <%= f.govuk_radio_button :times_flexible, "false" %>
      <% end %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
