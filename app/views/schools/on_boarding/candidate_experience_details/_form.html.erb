<%- self.page_title = 'Enter school experience details for candidates' -%>

<%= govuk_back_link javascript: true %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="gouvk-heading-l">
      Enter school experience details for candidates
    </h1>
    <p>
      These details will help candidates select a school experience.
    </p>

    <%= form_for candidate_experience_detail, url: url, method: method do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset :parking_provided do %>
        <%= f.govuk_radio_button :parking_provided, "true", link_errors: true do %>
          <%= f.govuk_text_area :parking_details, rows: 7 %>
        <% end %>
        <%= f.govuk_radio_button :parking_provided, "false" do %>
          <%= f.govuk_text_area :nearby_parking_details, rows: 7 %>
        <% end %>
      <% end %>

      <div class="govuk-form-group">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
          <h1 class="govuk-fieldset__heading">
            What are your start and finish times for candidates?
          </h1>
        </legend>
        <fieldset class="govuk-fieldset">
          <%= f.govuk_text_field :start_time, class: 'govuk-!-width-one-quarter' %>
          <%= f.govuk_text_field :end_time, class: 'govuk-!-width-one-quarter' %>
        </fieldset>
      </div>

      <%= f.govuk_radio_buttons_fieldset :times_flexible do %>
        <p>
          Can candidates start later or finish earlier depending on their
          individual needs. For example, around child care or any other
          responsibilities.
        </p>
        <%= f.govuk_radio_button :times_flexible, "true", link_errors: true do %>
          <%= f.govuk_text_area :times_flexible_details, rows: 7 %>
        <% end %>
        <%= f.govuk_radio_button :times_flexible, "false" %>
      <% end %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
