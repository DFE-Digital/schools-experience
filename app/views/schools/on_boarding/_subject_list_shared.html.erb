<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Select <%= phase_name %> school experience subjects
    </h1>

    <%= form_for model, url: submission_path, method: :post do |f| %>
      <%= GovukElementsErrorsHelper.error_summary f.object, 'There is a problem', '' %>
      <p>
        Tick all the <%= phase_name %> school experience subjects you offer and select continue.
      </p>
      <p>
        This will help candidates select a <%= phase_name %> school experience.
      </p>

      <div class="govuk-form-group">
        <div class="govuk-fieldset">
          <div class="govuk-checkboxes">
            <%= f.collection_check_boxes \
              :subject_ids,
              f.object.available_subjects,
              :id,
              :name,
              legend_options: { class: 'govuk-visually-hidden' }
            %>
          </div>
        </div>
      </div>

      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>

