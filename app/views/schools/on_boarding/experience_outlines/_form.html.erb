<%- self.page_title = 'Outline experience and teacher training' -%>

<%= govuk_back_link javascript: true %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Outline experience and teacher training details
    </h1>
    <p>
      These details will help candidates select your school experience.
    </p>

    <%= govuk_form_for experience_outline, url: url, method: method do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_area :candidate_experience, rows: 4, label: { class: 'govuk-heading-m' } do %>
        <p>
          Tell us about what candidates can expect to do while theyâ€™re at your school.
          For example, explain whether candidates will observe lessons or get the chance
          to interact with pupils and classroom activities.
        </p>
      <% end %>

      <%= f.govuk_radio_buttons_fieldset :provides_teacher_training do %>
        <%= f.govuk_radio_button :provides_teacher_training, "true", link_errors: true do %>
          <%= f.govuk_text_area :teacher_training_details, rows: 7 %>
          <%= f.govuk_url_field :teacher_training_url, placeholder: 'https://example.org' %>
        <% end %>
        <%= f.govuk_radio_button :provides_teacher_training, "false" %>
      <% end %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
