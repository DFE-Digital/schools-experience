<%
  self.breadcrumbs = {
    @current_school.name => schools_root_path,
    'Outline experience and teacher training' => nil
  }
%>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Outline experience and teacher training details
    </h1>
    <p>
      These details will help candidates select your school experience.
    </p>

    <%= form_for experience_outline, url: url, method: method do |f| %>
      <%= GovukElementsErrorsHelper.error_summary f.object, 'There is a problem', '' %>
      <%= f.text_area :candidate_experience, rows: 4, label_options: { overwrite_defaults!: true, class: 'govuk-heading-m' } do %>
        <p>
          Tell us about what candidates can expect to do while theyâ€™re at your school.
          For example, explain whether candidates will observe lessons or get the chance
          to interact with pupils and classroom activities.
        </p>
      <% end %>

      <%= f.radio_button_fieldset :provides_teacher_training do |fieldset| %>
        <%= fieldset.radio_input true do %>
          <%= f.text_area :teacher_training_details, rows: 7 %>
          <%= f.url_field :teacher_training_url, placeholder: 'https://example.org' %>
        <% end %>
        <%= fieldset.radio_input false %>
      <% end %>

      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>
