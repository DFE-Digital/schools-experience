<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Describe your school experience availability
    </h1>

    <%= form_for availability_description, url: url, method: method do |f| %>
      <%= GovukElementsErrorsHelper.error_summary f.object, 'There is a problem', '' %>
      <%= f.text_area :description, rows: 5 do %>
        <br>
        <p>
          For example, on specific days of the week and open days or around exams, holidays and term times.
        </p>
        <p>
          These details will be shown to candidates to help them choose a school experience at your school.
        </p>
      <% end %>
      <%= f.submit 'Continue' %>
    <% end %>
  </div>
</div>
