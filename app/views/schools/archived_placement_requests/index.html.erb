<% self.page_title = "Archived placement requests" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= govuk_back_link schools_placement_requests_path %>

    <h1>Archived requests</h1>

    <% if @placement_requests.any? %>
      <%= pagination_bar @placement_requests %>

      <%= render partial: 'schools/placement_requests/placement_requests_table',
        locals: { placement_requests: @placement_requests } %>

      <%= pagination_lower @placement_requests %>

    <% else %>
      <p>
        There are no requests.
      </p>
    <% end %>

    <%= govuk_link_to "Return to requests", schools_placement_requests_path, secondary: true %>
  </div>
</div>
