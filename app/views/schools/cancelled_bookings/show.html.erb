    "Cancelled bookings" => schools_cancelled_bookings_path,
    "Booking #{@booking.id}" => nil
  }
%>

<h1>Booking by <%= @booking.candidate_name %></h1>

<%= render 'schools/confirmed_bookings/booking', booking: @booking %>

<div>
