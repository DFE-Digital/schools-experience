<section id="account-admin" class="medium-priority">
  <h2 class="govuk-heading-m">
    Account admin
  </h2>
  
  <div id="rejected-requests" class="subsection">
    <header class="dashboard-medium-priority">
      <%= link_to "View rejected requests", schools_rejected_requests_path %>
    </header>
    <span class="govuk-hint">
      View request dates, subjects, candidate names and reasons for rejection
    </span>
  </div>

  <div id="previous-bookings" class="subsection">
    <header class="dashboard-medium-priority">
      <%= link_to "View previous bookings", schools_previous_bookings_path %>
    </header>
    <span class="govuk-hint">
      View booking dates, subjects, candidate names and attendance
    </span>
  </div>

  <div id="csv-download" class="subsection">
    <header class="dashboard-medium-priority">
      <%= link_to "Download requests and bookings", schools_csv_export_path %>
    </header>
    <span class="govuk-hint">
      Download all requests and bookings as a CSV file
    </span>
  </div>

  <div id="update-school-profile" class="subsection">
    <header class="dashboard-medium-priority">
      <%= link_to "Update school profile", schools_on_boarding_profile_path %>
    </header>
    <span class="govuk-hint">
      Update school details, placement details and requirements
    </span>
  </div>

  <div id="manage-requests" class="subection">
    <header class="dashboard-medium-priority">
      <%= link_to "Switch profile on or off", edit_schools_enabled_path %>
    </header>
    <span class="govuk-hint">
      Choose to stop / start receiving requests from candidates.
      Requests are currently <strong><%= school_enabled_description(@current_school) %></strong>.
    </span>
  </div>

  <div id="request-dsi-org-access" class="subsection">
    <header class="dashboard-medium-priority">
      <%= link_to "Request access to another organisation",
                  schools_organisation_access_request_path %>
    </header>
    <span class="govuk-hint">
      Request access to manage school experience for another organisation
    </span>
  </div>
</section>
